doctype html
html
  head
    title= title
  body
    h1 SiteMinder Challenge
    p Email Services
    hr
    if sent
      p Email sent!
    else
      form(name="send email", action="/sendemail", method="post")
        input(type="email", placeholder="To:", name="to", style="width: 50%; margin-right: 15px;")
        input(type="email", placeholder="Cc:", name="cc", style="width: 50%; margin-right: 15px;")
        input(type="email", placeholder="Bcc:", name="bcc", style="width: 50%; margin-right: 15px;")
        input(type="text", placeholder="Subject:", name="subject", style="width: 50%; margin-right: 15px;")
        textarea(type="email", row=3, placeholder="Your message", name="text", style="width: 50%; margin-right: 15px;")
        input(type="submit", value="Send")